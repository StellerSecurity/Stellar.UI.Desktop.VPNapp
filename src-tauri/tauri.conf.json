{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Stellar VPN",
  "version": "0.1.0",
  "identifier": "org.stellarsecurity.vpn.desktop",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build:web",
    "devUrl": "http://localhost:5176",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      { "title": "Stellar VPN", "width": 312, "height": 640, "resizable": false, "fullscreen": false }
    ],
    "security": {
      "csp": null,
      "capabilities": ["main-capability"]
    }
  },
  "bundle": {
    "active": true,
    "targets": ["deb", "rpm"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "linux": {
      "deb": {
        "files": {
          "/usr/lib/stellar-vpn/openvpn": "bin/openvpn-x86_64-unknown-linux-gnu"
        },
        "depends": ["libcap2-bin"],
        "postInstallScript": "scripts/linux/postinst.sh",
        "preRemoveScript": "scripts/linux/prerm.sh"
      },
      "rpm": {
        "files": {
          "/usr/lib/stellar-vpn/openvpn": "bin/openvpn-x86_64-unknown-linux-gnu"
        },
        "depends": ["libcap"],
        "postInstallScript": "scripts/linux/postinst.sh",
        "preRemoveScript": "scripts/linux/prerm.sh"
      }
    }

  }
}
