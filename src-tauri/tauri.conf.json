{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Stellar VPN",
  "version": "0.1.0",
  "identifier": "org.stellarsecurity.vpn.desktop",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build:web",
    "devUrl": "http://localhost:5173",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Stellar VPN",
        "width": 390,
        "height": 800,
        "resizable": false,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null,
      "capabilities": ["main-capability"]
    }
  },
  "bundle": {
    "active": true
  }
}
